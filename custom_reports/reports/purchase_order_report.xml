<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <report
            id="report_purchase_order"
            string="Globozor purchase order"
            model="purchase.order"
            report_type="qweb-pdf"
            file="custom_reports.purchase_order"
            name="custom_reports.purchase_order"
            paperformat="custom_reports.paperformat_report_purchase_order"
        />

        <record id="paperformat_report_purchase_order" model="report.paperformat">
            <field name="name">Globozor Purchase Order</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">8</field>
            <field name="margin_bottom">8</field>
            <field name="margin_left">8</field>
            <field name="margin_right">8</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>

        <template id="purchase_order">
            <t t-call="web.html_container">
                <t t-call="web.internal_layout">
                    <t t-foreach="docs" t-as="doc">
                    <div class="page" width="100%">
                        <table style="border-spacing:0px;border:1px solid black;" width="100%">
                            <tr width="100%">
                                <td style="padding-top:15px;text-align:center;font-size:25px;" width="100%">
                                    <t t-esc="doc.partner_id.name" />
                                </td>
                            </tr>
                            <tr>
                                <td style="text-align:center;font-size:15px" width="100%">
                                    <t t-esc="doc.partner_id.street"/>, <t t-esc="doc.partner_id.city"/> <t t-esc="doc.partner_id.state_id.name"/> <t t-esc="doc.partner_id.country_id.name"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding-bottom:10px;text-align:center;font-size:15px" width="100%">
                                    Mail Id: <t t-esc="doc.partner_id.email"/> Website: <t t-esc="doc.partner_id.website"/> Contact: <t t-esc="doc.partner_id.mobile"/>
                                </td>
                            </tr>
                            <tr style="border:1px solid black;border-bottom:0px" width="100%">
                                <td style="border:1px solid black;border-left:0px;border-right:0px;border-bottom:0px;text-align:center;font-size:20px;" width="100%">
                                    <b>Purchase Order</b>
                                </td>
                            </tr>
                        </table>
                        <table width="100%" style="border-spacing:0px;border:1px solid black;border-top:0px">
                            <tr>
                                <td style="border:1px solid black;border-left:0px;border-bottom:0px;border-top:0px;padding-left:10px;text-align:left;font-size:20px" width="40%">
                                    <b>Date:</b> <t t-esc="doc.date_approve"/>
                                </td>
                                <td style="padding-left:10px;text-align:left;font-size:20px;" width="60%">
                                    <b>Po No:</b> <t t-esc="doc.name"/>
                                </td>
                            </tr>
                        </table>
                        <table width="100%" height="20px" style="border-spacing:0px;">
                            <tr>
                                <td style="background-color:#000099;color:white;font-size:15px;" width="40%">
                                    VENDER
                                </td>
                                <td style="background-color:#000099;color:white;font-size:15px;" width="40%">
                                    SHIP TO
                                </td>
                            </tr>
                        </table>
                        <table width="100%" style="border:1px solid black;border-spacing:0px;">
                            <tr width="100%">
                                <td width="50%">
                                    <table width="100%">
                                        <tr><td style="padding-left:10px"><t t-esc="doc.partner_id.name" /></td></tr>
                                        <tr><td style="padding-left:10px"><t t-esc="doc.partner_id.team_id.name" /></td></tr>
                                        <tr><td style="padding-left:10px"><t t-esc="doc.partner_id.street"/></td></tr>
                                        <tr><td style="padding-left:10px"><t t-esc="doc.partner_id.city"/> <t t-esc="doc.partner_id.state_id.name"/> <t t-esc="doc.partner_id.country_id.name"/></td></tr>
                                        <tr><td style="padding-left:10px">Phone: <t t-esc="doc.partner_id.mobile"/></td></tr>
                                        <tr><td style="padding-left:10px">Fax: (000) 000-0000</td></tr>
                                        <tr><td style="padding-left:10px">GSTIN <t t-esc="doc.partner_id.vat"/></td></tr>
                                    </table>
                                </td>
                                <td width="50%">
                                    <table width="100%">
                                        <tr><td style="padding-left:10px">Name:</td></tr>
                                        <tr><td style="padding-left:10px">Address:</td></tr>
                                        <tr><td style="padding-left:10px"><![CDATA[&nbsp;]]></td></tr>
                                        <tr><td style="padding-left:10px">City:</td></tr>
                                        <tr><td style="padding-left:10px">State:</td></tr>
                                        <tr><td style="padding-left:10px">GSTIN</td></tr>
                                        <tr><td style="padding-left:10px">PAN NO:</td></tr>
                                    </table>
                                </td>
                            </tr>
                        </table>

                        <table width="100%" height="20px">
                            <tr><td width="100%"></td></tr>
                        </table>

                        <table width="100%" height="20px" style="border-spacing:0px;">
                            <tr>
                                <td style="background-color:#000099;color:white;font-size:15px;" width="100%">
                                    Bill to
                                </td>
                            </tr>
                        </table>

                        <table width="100%">
                            <tr>
                                <td width="40%" style="border:1px solid black">
                                    <table>
                                        <tr><td style="padding-left:10px">Name</td></tr>
                                        <tr><td style="padding-left:10px">Add:</td></tr>
                                        <tr><td style="padding-left:10px"><![CDATA[&nbsp;]]></td></tr>
                                        <tr><td style="padding-left:10px">City:</td></tr>
                                        <tr><td style="padding-left:10px">State:</td></tr>
                                        <tr><td style="padding-left:10px">GSTIN NO:</td></tr>
                                        <tr><td style="padding-left:10px">PAN NO:</td></tr>
                                    </table>
                                </td>
                                <td width="60%" style="border:1px solid black;border-left:0px">
                                    <table>
                                        <tr><td style="padding-left:10px">Expected date of Deliver</td></tr>
                                        <tr><td style="padding-left:10px">Way of Transport</td></tr>
                                        <tr><td style="padding-left:10px">Product specification as per annex</td></tr>
                                    </table>
                                </td>
                            </tr>
                        </table>

                        <table width="100%" height="20px">
                            <tr><td width="100%"></td></tr>
                        </table>

                        <table width="100%" style="border:1px solid black;border-spacing:0px">
                            <thead>
                                <tr width="100%">
                                    <th width="10%" style="text-align:center;border:1px solid black;border-left:0px;border-top:0px;border-bottom:0px"></th>
                                    <th width="30%" style="text-align:center;border:1px solid black;border-left:0px;border-top:0px;border-bottom:0px"></th>
                                    <th width="10%" style="text-align:center;border:1px solid black;border-left:0px;border-top:0px;border-bottom:0px"></th>
                                    <th width="10%" style="text-align:center;border:1px solid black;border-left:0px;border-top:0px;border-bottom:0px"></th>
                                    <th width="10%" style="text-align:center;border:1px solid black;border-left:0px;border-top:0px;border-bottom:0px"></th>
                                    <th width="20%" colspan="2" style="text-align:center;border:1px solid black;border-left:0px;border-top:0px">Tax Amount</th>
                                    <th width="10%" style="text-align:center;border:1px solid black;border-left:0px;border-top:0px;border-bottom:0px;border-right:0px"></th>
                                </tr>
                                <tr>
                                    <th width="10%" style="text-align:center;padding-bottom:5px;border:1px solid black;border-left:0px;border-top:0px;border-bottom:0px">Sr</th>
                                    <th width="30%" style="text-align:center;padding-bottom:5px;border:1px solid black;border-left:0px;border-top:0px;border-bottom:0px">Description of Goods</th>
                                    <th width="10%" style="text-align:center;padding-bottom:5px;border:1px solid black;border-left:0px;border-top:0px;border-bottom:0px">HSN</th>
                                    <th width="10%" style="text-align:center;padding-bottom:5px;border:1px solid black;border-left:0px;border-top:0px;border-bottom:0px">QTY</th>
                                    <th width="10%" style="text-align:center;padding-bottom:5px;border:1px solid black;border-left:0px;border-top:0px;border-bottom:0px">Rate</th>
                                    <th width="10%" style="text-align:center;padding-bottom:5px;border:1px solid black;border-left:0px;border-top:0px;border-bottom:0px">SGST</th>
                                    <th width="10%" style="text-align:center;padding-bottom:5px;border:1px solid black;border-left:0px;border-top:0px;border-bottom:0px">CGST</th>
                                    <th width="10%" style="text-align:center;padding-bottom:5px;border:1px solid black;border-left:0px;border-top:0px;border-bottom:0px;border-right:0px">Amount</th>
                                </tr>
                            </thead>
                            <tbody height="150px">
                                <t t-set="srno" t-value="1"/>
                                <tr t-foreach="doc.order_line" t-as="line">
                                    <td style="padding:1px;text-align:center;border:1px solid black;border-left:0px;border-bottom:0px"><t t-esc="srno"/></td>
                                    <td style="padding:1px;text-align:center;border:1px solid black;border-left:0px;border-bottom:0px"><t t-esc="line.product_id.name"/></td>
                                    <td style="padding:1px;text-align:center;border:1px solid black;border-left:0px;border-bottom:0px">123654</td>
                                    <td style="padding:1px;text-align:center;border:1px solid black;border-left:0px;border-bottom:0px"><t t-esc="line.product_qty"/></td>
                                    <td style="padding:1px;text-align:center;border:1px solid black;border-left:0px;border-bottom:0px"><t t-esc="line.price_unit"></t></td>
                                    <td style="padding:1px;text-align:center;border:1px solid black;border-left:0px;border-bottom:0px"><t t-esc="line.taxes_id.display_name"/></td>
                                    <td style="padding:1px;text-align:center;border:1px solid black;border-left:0px;border-bottom:0px"><t t-esc="line.taxes_id.display_name"/></td>
                                    <td style="padding:1px;text-align:center;   border:1px solid black;border-left:0px;border-bottom:0px;border-right:0px"><t t-esc="line.price_subtotal"/></td>
                                    <t t-set="srno" t-value="srno + 1"/>
                                </tr>

                                <tr>
                                    <td style="padding:1px;text-align:center;border:1px solid black;border-left:0px;border-bottom:0px"></td>
                                    <td style="padding:1px;text-align:center;border:1px solid black;border-left:0px;border-bottom:0px">Total No of Bags</td>
                                    <td style="padding:1px;text-align:center;border:1px solid black;border-left:0px;border-bottom:0px"></td>
                                    <td style="padding:1px;text-align:center;border:1px solid black;border-left:0px;border-bottom:0px"></td>
                                    <td style="padding:1px;text-align:center;border:1px solid black;border-left:0px;border-bottom:0px"></td>
                                    <td style="padding:1px;text-align:center;border:1px solid black;border-left:0px;border-bottom:0px"></td>
                                    <td style="padding:3px;text-align:left;border:1px solid black;border-left:0px;border-bottom:0px"><b>Sub Total</b></td>
                                    <td style="padding:1px;text-align:center;border:1px solid black;border-left:0px;border-bottom:0px;border-right:0px"><b><t t-esc="doc.amount_untaxed"/></b></td>
                                </tr>
                            </tbody>
                        </table>
                        <table width="100%" style="border:1px solid black;border-top:0px;border-spacing:0px">
                            <tr>
                                <td width="80%" style=";padding-left:3pxborder:1px solid black;border-left:0px;border-right:0px;border-top:0px;border-bottom:0px;padding-top:20px">Total Amount in words: <b><t t-esc="doc.amount_to_word"/></b></td>
                                <td width="10%" style="border:1px solid black;border-left:0p;border-top:0px;padding-top:20px"></td>
                                <td width="10%" style="border:1px solid black;border-left:0px;border-top:0px;border-right:0px;padding-top:20px"></td>
                            </tr>
                            <tr>
                                <td rowspan="2" width="80%" style="border:1px solid black;border-left:0px;border-left:0px;border-top:0px;border-bottom:0px"></td>
                                <td width="10%" style="border:1px solid black;border-left:0px;border-top:0px;padding-left:3px"><b>CGST</b></td>
                                <td width="10%" style="border:1px solid black;border-left:0px;border-top:0px;border-right:0px;text-align:center"><b><t t-esc="doc.amount_tax/2"/></b></td>
                            </tr>
                        </table>
                        <table width="100%" style="border:1px solid black;border-top:0px;border-spacing:0px">
                            <tr>
                                <td width="80%" style="border:1px solid black;;border-top:0px;border-bottom:0px;border-left:0px;padding-left:3px">Terms &amp; Condition</td>
                                <td width="10%" style="border:1px solid black;border-top:0px;border-left:0px;padding-left:3px"><b>SGST</b></td>
                                <td width="10%" style="border:1px solid black;border-top:0px;border-left:0px;border-right:0px;padding-left:3px;text-align:center"><b><t t-esc="doc.amount_tax/2"/></b></td>
                            </tr>
                            <tr>
                                <td style="border:1px solid black;border-top:0px;border-bottom:0px;border-left:0px;padding-left:3px"></td>
                                <td width="10%" style="border:1px solid black;border-top:0px;border-left:0px;padding-left:3px"><b>Round off</b></td>
                                <td width="10%" style="border:1px solid black;border-top:0px;border-left:0px;border-right:0px;padding-left:3px;text-align:center"><b><t t-esc="round((doc.amount_total - round(doc.amount_total/1,0))/1,2)"/></b></td>
                            </tr>
                            <tr>
                                <td style="border:1px solid black;border-top:0px;border-bottom:0px;border-left:0px;padding-top:20px;padding-left:3px"></td>
                                <td width="10%" style="border:1px solid black;border-top:0px;border-left:0px;padding-top:20px;padding-left:3px"></td>
                                <td width="10%" style="border:1px solid black;border-top:0px;border-left:0px;border-right:0px;padding-top:20px;padding-left:3px"></td>
                            </tr>
                            <tr>
                                <td style="border:1px solid black;border-top:0px;border-bottom:0px;border-left:0px;padding-left:3px"></td>
                                <td width="10%" style="border:1px solid black;border-top:0px;border-left:0px;border-bottom:0px;padding-left:3px;font-size:15px"><strong>Total Value</strong></td>
                                <td width="10%" style="border:1px solid black;border-top:0px;border-left:0px;border-right:0px;border-bottom:0px;padding-left:3px;text-align:center"><b><t t-esc="round(doc.amount_total/1,0)"/></b></td>
                            </tr>
                        </table>
                        <table width="100%" style="border:1px solid black;border-top:0px;border-spacing:0px">
                            <tr>
                               <td width="40%" style="padding-left:3px;border:1px solid black;border-top:0px;border-left:0px;padding-bottom:100px">
                                   <b>Buyer's Bank Details:</b>
                               </td>
                                <td width="60%" style="padding-left:3px;border:1px solid black;border-top:0px;border-left:0px;border-right:0px;padding-bottom:100px">
                                    <b>Vendor's Bank details</b>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding-left:3px;border:1px solid black;border-top:0px;border-left:0px;border-bottom:0px;padding-bottom:40px">
                                   For Globozor International Trade Pvt Ltd
                               </td>
                                <td style="padding-left:3px;border:1px solid black;border-top:0px;border-left:0px;border-bottom:0px;border-right:0px;padding-bottom:40px">
                                    Accepted by name sign and stemp
                                </td>
                            </tr>
                        </table>
                    </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>